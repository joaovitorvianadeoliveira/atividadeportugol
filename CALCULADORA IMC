programa {
  logico reiniciar = verdadeiro

  funcao calculeImc(){
     real peso
    real altura
    real IMC
 
  escreva("\calculadora de IMC\n")
escreva("\npeso: ")
  leia(peso)
  escreva("\naAgora digite sua altura\n")
  escreva("\naltura; \t")
  leia(altura)
 limpa()
IMC=peso/(altura*altura)

  escreva("\nseu indice de massa coporal é :" + IMC )

se(IMC<= 18.5){
  escreva("cuidado voce esta abaixo do peso ideial")}

  senao se (IMC<=24.9){
escreva("\nparabéns você está no peso ideial\n")}


senao se   (IMC>= 25 ){
  escreva("\nvocê está acima do peso ideial\n")
 
}
  }

 funcao inicio() {
enquanto(reiniciar){
calculeImc()
